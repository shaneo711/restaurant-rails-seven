<h1><%= @list.name %></h1>
<p><%= @list.description %></p>
<% if current_user == @list.user %>
  <%= link_to "Add Restaurant", new_restaurant_path(list_id: @list.id), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded my-2" %>
<% end %>
<ol>
  <% @list.restaurants.each do |restaurant| %>
    <li><%= restaurant.name %></li>
  <% end %>
</ol>
<p>Created by: <%= @list.user.first_name %></p>

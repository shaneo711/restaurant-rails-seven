<div class="flex min-h-full items-center justify-center py-4 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div class='flex flex-col justify-center'>
      <i class="fa-solid fa-bowl-food text-3xl mx-auto h-12 w-auto text-indigo-600"></i>
      <h2 class="mt-2 text-center text-3xl font-bold tracking-tight text-gray-900">New restaurant list</h2>
    </div>
    <%= simple_form_for @list do |f| %>
      <%= f.error_notification %>

      <div>
        <%= f.input :name, required: true, autofocus: true, input_html: { class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" }, placeholder: 'Name', label: false %>
      </div>
      <div>
        <%= f.input :description, required: true, input_html: { class: "relative block w-full appearance-none rounded-none border-x-1 border-b-1 border-t-0 border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" }, placeholder: 'Description', label: false %>
      </div>
      <div>
        <%= f.input :image_url, required: true, input_html: { class: "relative block w-full appearance-none rounded-none rounded-b-md border-x-1 border-t-0 border-b-1 border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" }, placeholder: 'Image', label: false %>
      </div>
      <div class="mt-4">
        <%= f.button :submit, "Create List", class: " w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>

<div class="flex min-h-full items-center justify-center py-4 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div class='flex flex-col justify-center'>
      <i class="fa-solid fa-bowl-food text-3xl mx-auto h-12 w-auto text-indigo-600"></i>
      <h2 class="mt-2 text-center text-3xl font-bold tracking-tight text-gray-900">New restaurant list</h2>
    </div>
    <%= simple_form_for @list do |f| %>
      <%= f.error_notification %>

      <div>
        <%= f.input :name, required: true, autofocus: true, input_html: { class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" }, placeholder: 'List name', label: false %>
      </div>
      <div>
        <%= f.input :description, required: true, input_html: { class: "relative block w-full appearance-none rounded-none border-x-1 border-b-1 border-t-0 border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" }, placeholder: 'List description', label: false %>
      </div>
      <div>
        <%= f.input :image_url, required: true, input_html: { class: "relative block w-full appearance-none rounded-none rounded-b-md border-x-1 border-t-0 border-b-1 border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" }, placeholder: 'Image URL', label: false %>
      </div>
      <div class="mt-2">
        <%= f.input :is_private, as: :boolean, label: 'Make list private?', input_html: { class: "flex items-center justify-between" }, label_html: { class: 'pl-1 mt-2'} do %>
          <%= f.check_box :is_private, class: "form-checkbox h-4 w-4 ml-1 text-indigo-600 transition duration-150 ease-in-out" %>
        <% end %>
      </div>
      <div class="mt-4">
        <%= f.button :submit, "Create List", class: " w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>

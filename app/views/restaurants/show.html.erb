
<div class="text-blue-500 hover:text-blue-800"><i class="fa-solid fa-arrow-left"></i><%= link_to " Back to Restaurants", restaurants_path %></div>

<div class="max-w-3xl mx-auto py-8 px-4">

  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @restaurant.name %></h1>
      <p>
        <%= @restaurant.cuisine_type %>
      </p>
    </div>
    <% if @restaurant.user == current_user %>
      <%= link_to edit_restaurant_path(@restaurant), class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline" do %>
        <i class="fa-solid fa-pen-to-square"></i>
        Edit
      <% end %>
    <% end %>
  </div>

  <div class="my-2">
    <img src="<%= @restaurant.image_url %>" alt="<%= @restaurant.name %>'s image" class="w-full rounded-lg shadow-lg">
  </div>

  <div class="mb-3">
    <h2 class="text-gray-700 font-bold text-xl">Address</h2>
    <div class="text-gray-600 mb-3">
      <%= @restaurant.address %>
    </div>
  </div>

  <div class="text-gray-700 font-bold text-xl py-4">
    Phone: <%= @restaurant.phone %>
  </div>
</div>
